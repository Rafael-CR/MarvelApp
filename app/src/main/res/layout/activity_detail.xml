<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.DetailActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


    <ImageView
        android:id="@+id/imageCharacter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/black" />

    <TextView
        android:id="@+id/nameCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCharacter"
        tools:text="Spider-Man" />

    <Button
        android:id="@+id/comicsBtn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/marvel_red"
        android:text="@string/comics"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/guiaV"
        app:layout_constraintTop_toBottomOf="@id/guiaH" />

    <Button
        android:id="@+id/storiesBtn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/marvel_red"
        android:text="@string/stories"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/guiaV"
        app:layout_constraintTop_toBottomOf="@id/guiaH" />

    <Button
        android:id="@+id/eventsBtn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/marvel_red"
        android:text="@string/events"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/guiaV"
        app:layout_constraintTop_toBottomOf="@id/comicsBtn" />

    <Button
        android:id="@+id/seriesBtn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/marvel_red"
        android:text="@string/series"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/guiaV"
        app:layout_constraintTop_toBottomOf="@id/storiesBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>