<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rrcr.prueba">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_marvel_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_marvel_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Prueba">
        <activity
            android:name=".ui.view.GenericDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.ButtomNavActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>